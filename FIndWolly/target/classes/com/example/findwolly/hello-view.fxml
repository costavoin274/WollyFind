<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.findwolly.HelloController"
      spacing="10" alignment="CENTER">
    <ImageView fx:id="originalImageView" fitWidth="400" preserveRatio="true"/>
    <ImageView fx:id="processedImageView" fitWidth="500" preserveRatio="true"/>
    <Button text="Load and Process Image" onAction="#onLoadAndProcessImage"/>
</VBox>
